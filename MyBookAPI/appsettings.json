{
  "ConnectionStrings": {
    "MyBookAPIDatabase": "Server=(LocalDb)\\MSSQLLocalDB;Database=MyBookAPIDatabase;Trusted_Connection=True;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\temp\\logs\\log.txt",
          "outputTemplate": "{Timestamp} {Message} {NewLine:1} {Exception:1}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl":  "http://localhost:8081"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
